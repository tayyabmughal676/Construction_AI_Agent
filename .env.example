# Server
PORT=3000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/multi-ai-agency
MONGODB_DB_NAME=multi-ai-agency

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AI/LLM
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
LM_STUDIO_URL=http://192.168.100.150:1234/v1
LM_STUDIO_MODEL=zai-org/glm-4.6v-flash

# Security
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Logging
LOG_LEVEL=info

# Email Configuration (for EmailSenderTool)
# Configure these to enable email sending functionality

# SMTP Server Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# SMTP Authentication
# For Gmail: Use an App Password (not your regular password)
# Generate at: https://myaccount.google.com/apppasswords
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# From Address (optional, defaults to SMTP_USER)
SMTP_FROM=noreply@yourcompany.com

# Other SMTP Providers:
# - Outlook: smtp-mail.outlook.com:587
# - Yahoo: smtp.mail.yahoo.com:587
# - SendGrid: smtp.sendgrid.net:587
# - Mailgun: smtp.mailgun.org:587
